<% if controller_name != 'sessions' %>
  <%= link_to "Вход", new_session_path(resource_name) %><br />
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Регистрация", new_registration_path(resource_name) %><br />
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Забыли пароль?", new_password_path(resource_name) %><br />
<% end %>

<% if devise_mapping.omniauthable? %>
  Войти с помощью:
  <%= link_to image_tag(facebook_icon), user_facebook_omniauth_authorize_path %>
  <%= link_to image_tag(vkontakte_icon), user_vkontakte_omniauth_authorize_path %>
<% end %>
