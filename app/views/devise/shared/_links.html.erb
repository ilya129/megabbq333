<%- if controller_name != 'sessions' %>
  <%= link_to "Вход", new_session_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Регистрация", new_registration_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Забыли пароль?", new_password_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%= link_to fa_icon('vk'), user_vkontakte_omniauth_authorize_path %>
  <%= link_to fa_icon('facebook'), user_facebook_omniauth_authorize_path %>
  <div class="buffer-top">
    <%= link_to 'Политика конфиденциальности', 'https://b-b-q.site/politika.html' %><br />
  </div>
<% end %>
