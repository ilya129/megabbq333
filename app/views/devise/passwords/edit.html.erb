<h2>Создание нового пароля</h2>
<div class="row">
  <div class="col-md-6 buffer-top">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render partial: 'partials/form_errors', locals: { model: resource } %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "Новый пароль" %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Подтвердите новый пароль" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "Установить пароль", class: 'btn btn-primary' %>
      </div>
    <% end %>
    <div class="buffer-both">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
