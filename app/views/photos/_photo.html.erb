<% image_title = "Добавил #{render partial: 'users/user', object: photo.user}" %>
<% image_delete = link_to(
  fa_icon('trash'), event_photo_path(photo.event, photo),
  method: :delete, data: {confirm: t('.destroy_confirm')}
) %>

<% image_title += image_delete if current_user_can_edit?(photo) %>

<%= link_to image_tag(photo.photo.thumb.url), photo.photo.url, data: {
  toggle: 'lightbox', gallery: "event#{photo.event.id}", title: image_title
} %>

